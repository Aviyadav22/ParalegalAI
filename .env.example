# ============================================
# ParalegalAI Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# Azure Blob Storage (REQUIRED)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=original-case-files
AZURE_STORAGE_METADATA_CONTAINER_NAME=original-case-files-metadata

# Gemini API (REQUIRED)
GEMINI_API_KEY=AIzaSy...your-api-key-here

# Security Keys (REQUIRED - Generate random strings)
JWT_SECRET=your-random-jwt-secret-min-12-chars
SIG_KEY=your-random-signature-key-min-32-chars-long
SIG_SALT=your-random-salt-key-min-32-chars-long

# Frontend API Base (Optional - defaults to http://localhost:3001/api)
VITE_API_BASE=http://localhost:3001/api
